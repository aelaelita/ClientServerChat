<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>
        <File name="file" fileName="log/connection.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m %ex%n</Pattern>
            </PatternLayout>
        </File>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%m%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Logger name= "Connection.Connection" level="info" additivity="true">
            <AppenderRef ref="File"/>
        </Logger>

        <Root level="all">
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>


</Configuration>